{
    "package": {
        "name": "chutney-junit",
        "repo": "maven",
        "subject": "chutney-testing",
        "vcs_url": "${project.url}",
        "licenses": ["Apache-2.0"]
    },

    "version": {
        "name": "${project.version}",
        "released": "${maven.build.timestamp}",
        "vcs_tag": "${project.version}"
    },

    "files":
    [
        {"includePattern": "pom.xml", "uploadPattern": "com/chutneytesting/chutney-junit-parent/${project.version}/chutney-junit-parent-${project.version}.pom"},
        {"includePattern": "api/pom.xml", "uploadPattern": "com/chutneytesting/chutney-junit-api/${project.version}/chutney-junit-api-${project.version}.pom"},
        {"includePattern": "api/target/(.*\.jar)", "uploadPattern": "com/chutneytesting/chutney-junit-api/${project.version}/$1"},
        {"includePattern": "engine/pom.xml", "uploadPattern": "com/chutneytesting/chutney-junit-engine/${project.version}/chutney-junit-engine-${project.version}.pom"},
        {"includePattern": "engine/target/(.*\.jar)", "uploadPattern": "com/chutneytesting/chutney-junit-engine/${project.version}/$1"}
    ],

    "publish": true
}
